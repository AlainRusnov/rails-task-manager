<h1> <%= @task.title %> </h1>
<button><%= link_to 'Edit this Task', edit_task_path(@task) %></button>

<p> <%= @task.details %> </p>

<% if @task.completed == true %>
<input type="checkbox" name="completed" checked>This task is Completed!</input>
<% else %>
<input type="checkbox" name="completed">This task is NOT completed!</input>
<% end %>

<p><%= link_to "Back to List", tasks_path %></p>