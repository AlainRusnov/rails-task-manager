<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><% if task.completed == true %>
<input type="checkbox" name="completed" checked>
<% else %>
<input type="checkbox" name="completed">
<% end %>
<%= link_to task.title, task_path(task) %></li>
  <% end %>
</ul>

<p><%= link_to "+ Add a new Task", new_task_path %></p>